<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_main_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_main_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@drawable/home_icon"
            android:src="@drawable/home_icon" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@drawable/icon_temperature"
            android:src="@drawable/icon_temperature" />

        <TextView
            android:id="@+id/tv_main_temperature"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/temperature"
            android:textSize="20sp" >
        </TextView>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@drawable/icon_humidity"
            android:src="@drawable/icon_humidity" />

        <TextView
            android:id="@+id/tv_main_humidity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/humidity"
            android:textSize="20sp" >
        </TextView>
        
        <Button 
            android:id="@+id/b_main_rules"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_main_control"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="@drawable/praterstr3" >

        <ImageButton
            android:id="@+id/ib_main_lampState"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="100dp"
            android:layout_marginRight="170dp"
            android:adjustViewBounds="true"
            android:background="@drawable/image_button_background"
            android:contentDescription="@drawable/gluehbirne_aus"
            android:scaleType="fitCenter"
            android:src="@drawable/loading" />

        <ImageView
            android:id="@+id/iv_main_doorState"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="5dp"
            android:contentDescription="@drawable/door_closed_icon"
            android:src="@drawable/door_closed_icon" />

        <ImageView
            android:id="@+id/iv_main_waterState"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="160dp"
            android:layout_marginLeft="85dp"
            android:contentDescription="@drawable/nass_icon"
            android:src="@drawable/nass_icon" />
        
        <ImageButton 
            android:id="@+id/ib_main_redLamp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="70dp"
            android:adjustViewBounds="true"
            android:background="@drawable/image_button_background"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"
            android:src="@drawable/rot_blinken_icon_aus"
            android:contentDescription="@drawable/rot_blinken_icon_aus"
            
            />
        
        <ImageButton 
            android:id="@+id/ib_main_sound"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="140dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"
            android:src="@drawable/sound_icon_aus"
            android:contentDescription="@drawable/sound_icon_aus"
            
            />
        
    </RelativeLayout>

</LinearLayout>